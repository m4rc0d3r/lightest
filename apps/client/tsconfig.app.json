{
  "extends": ["@vue/tsconfig/tsconfig.dom.json", "@lightest/typescript-config/combined.json"],
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "src/shared/ui/**/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "exactOptionalPropertyTypes": false,

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
