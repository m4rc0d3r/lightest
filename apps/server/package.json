{
  "name": "@lightest/server",
  "version": "0.0.0",
  "dependencies": {
    "@ts-rest/core": "^3.52.1",
    "@ts-rest/express": "^3.52.1",
    "@vercel/blob": "^1.1.1",
    "awilix": "^12.0.5",
    "awilix-express": "^9.0.2",
    "awilix-manager": "^6.1.0",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.43.1",
    "express": "^4.18.1",
    "fp-ts": "^2.16.10",
    "jsonwebtoken": "^8.5.1",
    "ms": "^2.1.3",
    "multer": "^2.0.1",
    "nodemailer": "^6.7.8",
    "pg": "^8.16.0",
    "pug": "^3.0.2",
    "sqlite3": "^5.0.11",
    "uid-safe": "^2.1.5",
    "zod": "^3.25.36"
  },
  "devDependencies": {
    "@lightest/core": "workspace:*",
    "@lightest/eslint-config": "workspace:*",
    "@lightest/lint-staged-config": "workspace:*",
    "@lightest/prettier-config": "workspace:*",
    "@lightest/typescript-config": "workspace:*",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.29",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/ms": "^0.7.34",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.0.1",
    "@types/nodemailer": "^6.4.5",
    "@types/pg": "^8.15.2",
    "@types/pug": "^2.0.6",
    "@types/uid-safe": "^2.1.5",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.31.1",
    "globals": "^16.2.0",
    "prettier-plugin-embed": "^0.5.0",
    "prettier-plugin-sql": "^0.19.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "main": "dist/main.js",
  "scripts": {
    "build": "concurrently --kill-others-on-fail -p \"[{name}]\" -n \"TSC,SWC\" -c \"blue.bold,yellow.bold\" \"pnpm build:ts\" \"pnpm build:swc\"",
    "build:swc": "swc src -d dist --strip-leading-paths --copy-files",
    "build:ts": "tsc -p tsconfig.app.json",
    "dev": "pnpm build && concurrently -k -p \"[{name}]\" -n \"TSC,SWC,App\" -c \"blue.bold,yellow.bold,red.bold\" \"pnpm watch:ts\" \"pnpm watch:swc\" \"pnpm start:watch\"",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "start": "node $npm_package_main",
    "start:watch": "node --watch-path=dist --watch-preserve-output --watch-path=.env $npm_package_main",
    "type-check": "concurrently -p \"[{name}]\" -n \"App,Node\" -c \"blue.bold,yellow.bold\" \"pnpm type-check-app\" \"pnpm type-check-node\"",
    "type-check-app": "tsc --noEmit -p tsconfig.app.json",
    "type-check-node": "tsc --noEmit -p tsconfig.node.json",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TSC,SWC\" -c \"blue.bold,yellow.bold\" \"pnpm watch:ts\" \"pnpm watch:swc\"",
    "watch:swc": "pnpm build:swc -w",
    "watch:ts": "pnpm build:ts -w --preserveWatchOutput"
  },
  "type": "module"
}
