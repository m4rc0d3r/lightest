{
  "name": "@test-and-be-tested/server",
  "version": "0.0.0",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-validator": "^6.14.2",
    "jsonwebtoken": "^8.5.1",
    "ms": "^2.1.3",
    "nodemailer": "^6.7.8",
    "pug": "^3.0.2",
    "sqlite": "^4.1.2",
    "sqlite3": "^5.0.11",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.29",
    "@test-and-be-tested/eslint-config": "workspace:*",
    "@test-and-be-tested/lint-staged-config": "workspace:*",
    "@test-and-be-tested/typescript-config": "workspace:*",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/ms": "^0.7.31",
    "@types/nodemailer": "^6.4.5",
    "@types/pug": "^2.0.6",
    "@types/sqlite3": "^3.1.8",
    "@types/uuid": "^8.3.4",
    "concurrently": "^9.1.2",
    "globals": "^16.2.0",
    "typescript": "^5.8.3"
  },
  "main": "dist/main.js",
  "scripts": {
    "build": "concurrently --kill-others-on-fail -p \"[{name}]\" -n \"TSC,SWC\" -c \"blue.bold,yellow.bold\" \"pnpm build:ts\" \"pnpm build:swc\"",
    "build:swc": "swc src -d dist --strip-leading-paths",
    "build:ts": "tsc",
    "dev": "pnpm build && concurrently -k -p \"[{name}]\" -n \"TSC,SWC,App\" -c \"blue.bold,yellow.bold,red.bold\" \"pnpm watch:ts\" \"pnpm watch:swc\" \"pnpm dev:start\"",
    "dev:start": "node --watch --watch-preserve-output $npm_package_main",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "start": "pnpm build && node $npm_package_main",
    "type-check": "tsc --noEmit -p .",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TSC,SWC\" -c \"blue.bold,yellow.bold\" \"pnpm watch:ts\" \"pnpm watch:swc\"",
    "watch:swc": "pnpm build:swc -w",
    "watch:ts": "pnpm build:ts -w --preserveWatchOutput"
  },
  "type": "module"
}
