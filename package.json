{
  "name": "lightest",
  "version": "0.0.0",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@lightest/eslint-config": "workspace:*",
    "@lightest/lint-staged-config": "workspace:*",
    "@lightest/prettier-config": "workspace:*",
    "@lightest/typescript-config": "workspace:*",
    "@types/node": "^24.0.1",
    "depcheck": "^1.4.7",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "syncpack": "^13.0.4",
    "typescript-eslint": "^8.32.1"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@9.15.1",
  "scripts": {
    "build": "pnpm --filter './**' build",
    "dev": "pnpm build && pnpm --parallel --filter './**' dev",
    "format:check": "prettier --check . '!{apps,packages/core}'; pnpm --filter './apps/**' --filter './packages/core' format:check",
    "format:fix": "prettier --write . '!{apps,packages/core}'; pnpm --filter './apps/**' --filter './packages/core' format:fix",
    "lint:check": "eslint --flag v10_config_lookup_from_file --ignore-pattern 'apps' --ignore-pattern 'packages/core' '.'; pnpm --filter './apps/**' --filter './packages/core' lint:check",
    "lint:fix": "eslint --fix --flag v10_config_lookup_from_file --ignore-pattern 'apps' --ignore-pattern 'packages/core' '.'; pnpm --filter './apps/**' --filter './packages/core' lint:fix",
    "prepare": "husky",
    "type-check": "pnpm --parallel --filter './**' type-check"
  },
  "type": "module"
}
