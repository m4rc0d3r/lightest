{
  "name": "test-and-be-tested",
  "version": "0.0.0",
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@9.15.1",
  "type": "module",
  "devDependencies": {
    "@test-and-be-tested/eslint-config": "workspace:*",
    "@test-and-be-tested/lint-staged-config": "workspace:*",
    "@test-and-be-tested/prettier-config": "workspace:*",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "syncpack": "^13.0.4"
  },
  "scripts": {
    "build": "pnpm --filter './**' build",
    "dev": "pnpm build && pnpm --parallel --filter './**' dev",
    "format:check": "prettier --check . '!apps'; pnpm --filter './apps/**' format:check",
    "format:fix": "prettier --write . '!apps'; pnpm --filter './apps/**' format:fix",
    "lint:check": "eslint --flag unstable_config_lookup_from_file --ignore-pattern 'apps' '.'; pnpm --filter './apps/**' lint:check",
    "lint:fix": "eslint --fix --flag unstable_config_lookup_from_file --ignore-pattern 'apps' '.'; pnpm --filter './apps/**' lint:fix",
    "prepare": "husky",
    "type-check": "pnpm --parallel --filter './**' type-check"
  }
}
